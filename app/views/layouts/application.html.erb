<!DOCTYPE html>
<html>
<head>
  <title>VirtU</title>
  <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  <link rel="stylesheet" type="text/css" href="//maxcdn.bootstrapcdn.com/bootswatch/3.3.4/readable/bootstrap.min.css">
  <link rel="stylesheet" type="text/css" href="//maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css">
  <script src="https://www.google.com/jsapi"></script>
  <script src="https://www.youtube.com/iframe_api"></script>
  <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jquery/2.1.3/jquery.min.js"></script>
  <script type="text/javascript" src="//maxcdn.bootstrapcdn.com/bootstrap/3.3.4/js/bootstrap.min.js"></script>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <title>Virt-U</title>
</head>
<body style="background-color: #FFFFFF">
<%= disqus_init %>
  <% if flash.alert || flash.notice %>   
    	<% if flash.alert %>
        	<div id="flash" width="100%" style="padding: 0px;">
            <h6 class="alert alert-danger alert-dismissible" role="alert" width="100%" style="margin: 0px;border-radius: 0px;">
                <%= flash.alert %>
            </h6>
        	</div>
    	<% end %>
      <% if flash.notice %>
      	<div id="notice" width="100%" style="padding: 0px">
                <h6 class="alert alert-success alert-dismissible" role="alert" width="100%" style="margin: 0px;border-radius: 0px;">
                    <%= flash.notice %>
                </h6>   
      	</div>
      <% end %>
  <% end %>
  <%= yield %>
  <div class="container-fluid" style="background-color: #383838;">
    <% if !admin_signed_in? && !user_signed_in? %>
      <h6 class="pull-right"><a href="/admins/sign_in">Admin</a></h6>
    <% end %>
    <h6 class="text-center" style="padding: 30px; color: #FFFFFF;">Â© 2015 Virt-U. Developed by <a href="http://ciregbulem.github.io" style="color: #FFFFFF;">Chudi Iregbulem</a></h6>
  </div>

    <!-- Smooth Scroll -->
    <script type="text/javascript">
      (function (jQuery) {
        jQuery.mark = {
          jump: function (options) {
            var defaults = {
              selector: 'a.smooth-scroll'
            };
            if (typeof options == 'string') defaults.selector = options;
            var options = jQuery.extend(defaults, options);
            return jQuery(options.selector).click(function (e) {
              var jumpobj = jQuery(this);
              var target = jumpobj.attr('href');
              var thespeed = 1000;
              var offset = jQuery(target).offset().top;
              jQuery('html,body').animate({
                scrollTop: offset
              }, thespeed, 'swing')
              e.preventDefault();
            })
          }
        }
      })(jQuery);


      jQuery(function(){  
        jQuery.mark.jump();
      });
    </script><!-- Smooth Scroll -->
</body>
</html>
