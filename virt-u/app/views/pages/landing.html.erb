<html>
	<head>
		<link rel="stylesheet" type="text/css" href="//maxcdn.bootstrapcdn.com/bootswatch/3.3.1/flatly/bootstrap.min.css">
		<link rel="stylesheet" type="text/css" href="//maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css">
		<link rel="stylesheet" type="text/css" href="/app/assets/stylesheets/landing.css">
		<link rel="stylesheet" type="text/css" href="/app/assets/stylesheets/hover-min.css" media="all">
	</head>
	<body>
		<!-- Optimized for large screens. Still need to make work for smaller screens especially the logo and navbar links. -->
		<div class="container-fluid header">
			<div class="row">
				<div class="col-lg-2">
					<a href="/"><img src="https://s3-us-west-1.amazonaws.com/virt-u/Virt_U_Text_Logo.png" class="img img-responsive" width="70%" height="70%"></a>
				</div>
				<div class="col-lg-offset-6 col-lg-4 navbar-links">
					<a href="#about" class="hover btn"><h4 class="text-uppercase">About</h4></a>
					<a href="#signup" class="hover btn"><h4 class="text-uppercase">Sign Up</h4></a>
					<a href="#login" class="hover btn"><h4 class="text-uppercase">Login</h4></a>
				</div>
			</div>
			<br>
			<br>
			<br>
			<div class="row text-main">
				<div class="col-lg-offset-2 col-lg-8">
					<strong><h1 class="text-capitalize text-center attention-text">Learn What You Want</h1><br></strong>
					<center><a class="btn btn-trans btn-lg" href="#">Get Started</a></center>
				</div>
			</div>
		</div>
		<!-- jQuery (necessary for Bootstrap's JavaScript plugins) -->
	    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>
	    <!-- Include all compiled plugins (below), or include individual files as needed -->
	    <script src="//maxcdn.bootstrapcdn.com/bootstrap/3.3.1/js/bootstrap.min.js"></script>
	    <script type="text/javascript">
	    // Places bar under links when hovered and removes when not hovered 
	    $(".hover").hover(
	    	function (){
	    		$(this).addClass('hvr-underline-reveal');
	    	},
	    	function (){
	    		$(this).removeClass('hvr-underline-reveal');
	    	}
    	);
	    // Code for placing underline under active button
    	$(".hover").click(
    		function(){
    			$(this).addClass('hvr-underline-reveal');
    		}
		);
    	// Adds white background to 'Get Started' button on hove
	    $(".btn-trans").hover(
	    	function (){
	    		$(this).addClass('main-btn-hover');
	    	},
	    	function (){
	    		$(this).removeClass('main-btn-hover');
	    	}
    	);
	    </script>
	</body>
</html>